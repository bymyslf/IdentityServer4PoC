@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<form asp-action="ForgotPassword" method="post">
    <h2 class="text-center"><small class="text-muted">Did you forget your password?</small></h2>
    <p>Enter your email address below and we will send you the instructions to reset your password.</p>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark btn-block">Continue</button>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
